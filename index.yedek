    <script>
        const bday = new Date('1986-12-27T00:00:00');
        const exts = ['jpg', 'png', 'webp', 'jpeg'];

        /* --- THE UNIVERSE PARTÄ°KÃœL SÄ°STEMÄ° --- */
        function initUniverse() {
            const canvas = document.getElementById('universe-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
            
            const particles = [];
            for(let i=0; i<80; i++) {
                particles.push({
                    x: Math.random() * canvas.width,
                    y: Math.random() * canvas.height,
                    radius: Math.random() * 1.5,
                    vx: (Math.random() - 0.5) * 0.4,
                    vy: (Math.random() - 0.5) * 0.4,
                    alpha: Math.random() * 0.5 + 0.1
                });
            }

            function draw() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                particles.forEach(p => {
                    p.x += p.vx;
                    p.y += p.vy;
                    if(p.x < 0) p.x = canvas.width;
                    if(p.x > canvas.width) p.x = 0;
                    if(p.y < 0) p.y = canvas.height;
                    if(p.y > canvas.height) p.y = 0;

                    ctx.beginPath();
                    ctx.arc(p.x, p.y, p.radius, 0, Math.PI * 2);
                    ctx.fillStyle = `rgba(255, 0, 127, ${p.alpha})`;
                    ctx.fill();
                });
                requestAnimationFrame(draw);
            }
            draw();
            
            window.addEventListener('resize', () => {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            });
        }

        /* --- LIGHTBOX FONKSÄ°YONLARI --- */
        function openLightbox(src) {
            document.getElementById('lightbox-img').src = src;
            document.getElementById('lightbox').classList.add('active');
        }
        function closeLightbox() {
            document.getElementById('lightbox').classList.remove('active');
        }

        /* --- SES KONTROL FONKSÄ°YONU --- */
        function toggleAudio() {
            const audio = document.getElementById('myBeat');
            const btn = document.getElementById('audio-btn');
            if(audio.paused) {
                audio.play();
                btn.classList.remove('muted');
                btn.classList.add('playing');
            } else {
                audio.pause();
                btn.classList.remove('playing');
                btn.classList.add('muted');
            }
        }

        function updateGlow() {
            const center = window.innerHeight / 2;
            document.querySelectorAll('.glow-target, .photo-slot img').forEach(el => {
                const rect = el.getBoundingClientRect();
                const elCenter = rect.top + (rect.height / 2);
                const dist = Math.abs(elCenter - center);

                if (dist < 200) {
                    el.style.opacity = "1";
                    el.style.filter = "grayscale(0)";
                    
                    if(el.classList.contains('pp-container')) {
                        el.style.borderColor = "var(--shn-pink)";
                        el.querySelector('img').style.filter = "grayscale(0)";
                        el.querySelector('img').style.opacity = "1";
                    }
                    
                    if(el.classList.contains('shn-name')) { el.style.color = "var(--shn-pink)"; el.style.webkitTextStroke = "1px var(--shn-pink)"; el.style.textShadow = "0 0 20px var(--shn-pink)"; }
                    if(el.classList.contains('info-item')) { el.style.color = "#fff"; el.querySelector('.info-label').style.color = "var(--shn-pink)"; }
                    if(el.id === 'age-timer') { el.style.color = "var(--shn-pink)"; el.style.textShadow = "0 0 15px var(--shn-pink)"; }
                    if(el.classList.contains('section-title')) { el.style.color = "#fff"; }
                    if(el.classList.contains('album-card')) { 
                        const aImg = el.querySelector('img');
                        aImg.style.filter = "grayscale(0)"; 
                        aImg.style.opacity = "1"; 
                        el.style.borderColor = "#333";
                        el.querySelector('.album-name').style.color = "var(--shn-pink)"; 
                        el.querySelectorAll('.track-item').forEach(t => t.style.color = "#aaa");
                    }
                    if(el.classList.contains('btn')) { el.style.borderColor = "var(--shn-pink)"; el.style.color = "var(--shn-pink)"; el.style.boxShadow = "0 0 15px rgba(255,0,127,0.2)"; }
                } else {
                    if(el.classList.contains('pp-container')) {
                        el.style.opacity = "0.3";
                        el.style.filter = "grayscale(1)";
                        el.style.borderColor = "rgba(255,255,255,0.1)";
                    }
                    if(el.tagName === 'IMG' && !el.closest('.pp-container')) { el.style.opacity = "0.35"; el.style.filter = "grayscale(1)"; }
                    if(el.classList.contains('shn-name')) { el.style.color = "transparent"; el.style.webkitTextStroke = "1px rgba(255,255,255,0.1)"; el.style.textShadow = "none"; }
                    if(el.classList.contains('info-item')) { el.style.color = "#555"; el.querySelector('.info-label').style.color = "#333"; }
                    if(el.id === 'age-timer') { el.style.color = "#222"; el.style.textShadow = "none"; }
                    if(el.classList.contains('section-title')) { el.style.color = "#333"; }
                    if(el.classList.contains('album-card')) { 
                        const aImg = el.querySelector('img');
                        aImg.style.filter = "grayscale(1)"; 
                        aImg.style.opacity = "0.3"; 
                        el.style.borderColor = "#111";
                        el.querySelector('.album-name').style.color = "#333"; 
                        el.querySelectorAll('.track-item').forEach(t => t.style.color = "#555");
                    }
                    if(el.classList.contains('btn')) { el.style.borderColor = "#111"; el.style.color = "#333"; el.style.boxShadow = "none"; }
                }
            });
        }

        window.addEventListener('scroll', updateGlow);

        function init() {
            // YaÅŸ ve DoÄŸum GÃ¼nÃ¼ KontrolÃ¼
            setInterval(() => {
