        async function loadTracks() {
            const albums = document.querySelectorAll('.album-card');
            for (let card of albums) {
                const txtFile = card.getAttribute('data-txt');
                if (!txtFile) continue;
                try {
                    const response = await fetch(txtFile + '?v=' + Date.now());
                    if (!response.ok) throw new Error('Dosya bulunamadÄ±');
                    const text = await response.text();
                    const tracks = text.split('\n').map(t => t.trim()).filter(t => t.length > 0);
                    if (tracks.length > 0) {
                        const trackList = card.querySelector('.track-list');
                        trackList.innerHTML = ''; 
                        tracks.forEach(track => {
                            const div = document.createElement('div');
                            div.className = 'track-item';
                            div.innerText = track;
                            trackList.appendChild(div);
                        });
                        const duration = Math.max(tracks.length * 1.5, 6); 
                        trackList.style.animationDuration = `${duration}s`;
                    }
                } catch (error) {
                    console.log(`${txtFile} henÃ¼z eklenmemiÅŸ veya okunamÄ±yor.`);
                }
            }
        }

        function scanImages() {
            const grid = document.getElementById('photo-grid');
            for (let i = 1; i <= 15; i++) {
                checkExt(i, 0);
            }
        }

        function checkExt(idx, eIdx) {
            if (eIdx >= exts.length) return;
            const img = new Image();
            img.src = `${idx}.${exts[eIdx]}?v=${Date.now()}`;
            img.onload = () => {
                const slot = document.createElement('div');
                slot.className = 'photo-slot';
                slot.style.display = 'block';
                // Resme tÄ±klanma Ã¶zelliÄŸi eklendi
                img.onclick = () => openLightbox(img.src);
                slot.appendChild(img);
                document.getElementById('photo-grid').appendChild(slot);
            };
            img.onerror = () => checkExt(idx, eIdx + 1);
        }

        function reveal() {
            const audio = document.getElementById('myBeat');
            audio.play();
            
            // Butonu gÃ¶rÃ¼nÃ¼r yap ve animasyonu baÅŸlat
            const audioBtn = document.getElementById('audio-btn');
            audioBtn.style.opacity = '1';
            audioBtn.style.pointerEvents = 'auto';
            audioBtn.classList.add('playing');

            const intro = document.getElementById('intro');
            intro.style.transform = 'translateY(-100%)';
            setTimeout(() => {
                intro.style.display = 'none';
                document.getElementById('main').style.opacity = '1';
                document.getElementById('main').style.transform = 'translateY(0)';
                
                // Arka planÄ± (Universe) ve feneri gÃ¶ster
                document.getElementById('universe-canvas').style.opacity = '0.7';
                const glow = document.getElementById('dynamic-glow');
                glow.style.top = (window.innerHeight * 0.3) + 'px';
                glow.style.opacity = '1';
                updateGlow();
            }, 600);
        }

        window.onload = init;
    </script>
</body>
</html>
